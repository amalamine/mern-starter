{
  "name": "mern-starter",
  "version": "1.0.0",
  "description": "MERN Starter App",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "npm-run-all build:css build:react",
    "test": "npm-run-all test:backend test:frontend",
    "eject": "react-scripts eject",
    "watch:sass": "node-sass public/sass/main.scss public/css/styles.css -w",
    "compile:sass": "node-sass public/sass/main.scss public/css/styles.comp.css",
    "concat:css": "concat -o public/css/styles.concat.css public/css/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/styles.concat.css -o public/css/styles.prefix.css",
    "compress:css": "node-sass public/css/styles.prefix.css public/css/styles.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "start:dev-server": "nf --procfile Procfile-dev --port 3000 start",
    "start:dev-sass": "npm run watch:sass",
    "start-dev": "npm-run-all --parallel start:dev-sass start:dev-server",
    "start-prod": "nf start",
    "build:react": "react-scripts build",
    "test:frontend": "jest",
    "test:backend": "mocha server/tests --timeout 15000"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "body-parser": "^1.18.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "ibm-cloud-env": "^0",
    "mongoose": "^4.9.8",
    "nodemon": "^1.11.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-form": "^7.3.0",
    "redux-promise": "^0.6.0",
    "request": "^2.86.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "babel-jest": "^23.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.0.0",
    "concat": "^1.0.3",
    "foreman": "^2.0.0",
    "jest": "^23.1.0",
    "mocha": "^3.4.2",
    "node-sass": "^4.9.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.3",
    "nyc": "^10.3.2",
    "postcss-cli": "^5.0.0",
    "react-scripts": "0.9.5",
    "react-test-renderer": "^16.4.0"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "es2015"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/tests/setup.js"
  },
  "proxy": "http://localhost:3001"
}
